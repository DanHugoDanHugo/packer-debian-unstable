{
  "builders": [
    {
      "type": "virtualbox",
      "guest_os_type": "Debian_64",
      "disk_size": 6000,
      "iso_url": "http://ftp.fr.debian.org/debian/dists/unstable/main/installer-amd64/current/images/netboot/mini.iso",
      "iso_checksum": "4e3607003a8ba110518d2162288a5b5a",
      "iso_checksum_type": "md5",
      "http_directory": "http",
      "ssh_username": "loic",
      "ssh_password": "loic",
      "ssh_wait_timeout": "2h",
      "shutdown_command": "echo 'loic' | sudo -S halt -p",
      "headless": false,
      "boot_wait": "5s",
      "boot_command": [
        "<esc><wait>",
        "auto url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed.cfg",
        "<enter>"
      ]
    }
  ],

  "provisioners": [
    {
      "type": "shell",
      "scripts": [
        "scripts/vagrant.sh",
        "scripts/virtualbox.sh"
      ],
      "execute_command": "echo 'loic' | {{ .Vars }} sudo -E -S sh '{{ .Path }}'"
    }
  ],

  "post-processors": [
    {
      "type": "vagrant",
      "keep_input_artifact": true
    }
  ]
}
